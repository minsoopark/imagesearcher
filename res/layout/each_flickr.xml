<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/lImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/polaroid_bg"
            android:contentDescription="@string/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/lThumbnailImageView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/lTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:textColor="#1c1c1c"
                android:textIsSelectable="false"
                android:textSize="15sp"
                android:textStyle="italic" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/rImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/polaroid_bg"
            android:contentDescription="@string/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/rThumbnailImageView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/rTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:textColor="#1c1c1c"
                android:textIsSelectable="false"
                android:textSize="15sp"
                android:textStyle="italic" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>